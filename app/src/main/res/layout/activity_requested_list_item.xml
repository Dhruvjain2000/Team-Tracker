<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:paddingVertical="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tvRequestedName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="Name"
            android:textSize="15sp"
            android:background="@drawable/back"
            />
        <TextView
            android:id="@+id/tvRequestedPartName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Part Name"
            android:textSize="15sp"
            android:background="@drawable/back"
            />
        <TextView
            android:id="@+id/tvRequestedPartCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Part Count"
            android:textSize="15sp"
            android:background="@drawable/back"
            />
        <TextView
            android:id="@+id/tvRequestedCityName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="City name"
            android:textSize="15sp"
            android:background="@drawable/back"
            />

        <TextView
            android:id="@+id/tvRequestedPincode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Pincode"
            android:textSize="15sp"
            android:background="@drawable/back"
            />

    </LinearLayout>

</LinearLayout>